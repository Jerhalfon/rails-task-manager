<h1>My Tasks</h1>
<% @tasks.each do |task| %>
<% if task.completed %>

  <p><%= icon('fas', 'check-square')%> <%= task.title %></p>

  <% else %>
  <p><%= icon('fas', 'square')%> <%= task.title %></p>
<% end %>
 <h2><%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task),
 method: :delete,
  data: { confirm: "Are you sure?" } %>
  </h2>
<% end %>

